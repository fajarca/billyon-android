<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--if button is pressed-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius_16dp" />
            <gradient android:angle="135" android:endColor="@color/teal_700" android:startColor="@color/teal_600" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius_16dp" />
            <solid android:color="@color/teal_500" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius_16dp" />
            <gradient android:angle="135" android:endColor="@color/teal_200" android:startColor="@color/teal_300" />
            <padding android:bottom="@dimen/padding8dp" android:left="@dimen/padding8dp" android:right="@dimen/padding8dp" android:top="@dimen/padding8dp" />
        </shape>
    </item>
</selector>