<resources>


    <style name="BillyonTheme" parent="BillyonTheme.Base" />

    <style name="BillyonTheme.Base" parent="Theme.MaterialComponents.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/BillyonTheme.Button</item>
        <item name="textInputStyle">@style/BillyonTheme.TextInput.OutlinedBox</item>
        <item name="materialCardViewStyle">@style/BillyonTheme.CardView</item>
    </style>



    <style name="BillyonTheme.Button" parent="Widget.MaterialComponents.Button"/>
    <style name="BillyonTheme.Button.DeepOrange" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/deep_orange_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BillyonTheme.CardView" parent="Widget.MaterialComponents.CardView"/>

    <style name="BillyonTheme.TextInput.OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="hintTextColor">@color/text_input_hint_color</item>
    </style>

    <!--Button-->
    <style name="BillyonTheme.Button.Normal" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BillyonTheme.Button.Rounded.DeepOrange" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/deep_orange_500</item>
        <item name="android:background">@drawable/rounded_button_deep_orange</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="BillyonTheme.Button.Rounded.Green" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BillyonTheme.Button.Rounded.Small" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@drawable/rounded_buttom_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>







    <!--TextView-->
    <style name="BillyonTheme.Text.Heading" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BillyonTheme.Text.Circular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/circular_family</item>
    </style>

    <style name="BillyonTheme.Text.Circular.Bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/circular_family</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="BillyonTheme.Text.Circular.Bold.White" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/circular_family</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BillyonTheme.Text.Circular.Bold.Grey" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/circular_family</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <style name="BillyonTheme.Text.Circular.Bold.DeepOrange" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/circular_family</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/deep_orange_400</item>
    </style>

    <style name="BillyonTheme.Text.Circular.Normal" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/circular_family</item>
        <item name="android:textSize">@dimen/textSize14sp</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="BillyonTheme.EditText.Underline.Black" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/grey_900</item>
        <item name="colorControlNormal">@color/grey_900</item>
    </style>

    <!--BottomNavigationView-->
    <style name="BillyonTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/circularstdbook</item>
    </style>


</resources>
