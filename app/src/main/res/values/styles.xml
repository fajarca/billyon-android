<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BillyonTheme" parent="BillyonTheme.Base" />

    <style name="BillyonTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/BillyonTheme.Button.Normal</item>
    </style>

    <!--Button-->
    <style name="BillyonTheme.Button.Normal" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BillyonTheme.Button.Rounded" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BillyonTheme.Button.Rounded.Small" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@drawable/rounded_buttom_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <!--TextView-->
    <style name="BillyonTheme.Text.Heading" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BillyonTheme.Text.Circular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/circular_family</item>
    </style>

    <!--BottomNavigationView-->
    <style name="BillyonTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/circularstdbook</item>
    </style>


</resources>
