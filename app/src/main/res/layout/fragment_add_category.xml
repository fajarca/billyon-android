<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="fragment"
            type="co.id.billyon.ui.cashier.addcategory.AddCategoryFragment" />

        <variable
            name="vm"
            type="co.id.billyon.ui.cashier.addcategory.AddCategoryViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAddCategory"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@color/grey_500"
            android:onClick="@{()->fragment.takePicture()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilCategoryName"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:errMessage="@{vm.isValid}"
            app:layout_constraintBottom_toTopOf="@+id/ivAddCategory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAddCategory"
            app:layout_constraintVertical_bias="0.0">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_category_name"
                android:inputType="text"
                android:maxLength="30"
                android:singleLine="true"
                android:text="@={vm._categoryName}"
                app:minLength="@{2}" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{()->vm.onAddCategory()}"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tilCategoryName"
            app:layout_constraintStart_toStartOf="@+id/tilCategoryName"
            app:layout_constraintTop_toBottomOf="@+id/tilCategoryName" />

    </android.support.constraint.ConstraintLayout>
</layout>
